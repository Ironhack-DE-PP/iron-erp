<!DOCTYPE html>
<html>

<head>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/select2.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
</head>

<body>
    <% if(user !== undefined) { %>
      <nav>
        <div class="nav-wrapper  blue">
          <a href="#" class="brand-logo center">Client Management</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <a class='dropdown-button blue' href='#' data-activates='logout-dropdown'>Options</a>            
          </ul>

          <ul id='logout-dropdown' class='dropdown-content'>
              <li><a href="#" class="blue-text">User: <%= user.username %></a></li>
              <li><a href="/logout" class="blue-text">Logout</a></li>
            </ul>
        </div>
      </nav>
    <% } else { %>
      <nav>
          <div class="nav-wrapper  blue">
            <a href="#" class="brand-logo center">Client Management</a>
          </div>
        </nav>  
    <% } %>
  <div class="container">
      <%- body %>
  </div>
</body>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
<script src="/javascripts/select2.full.min.js"></script>
<script src="/javascripts/main.js"></script>

</html>
