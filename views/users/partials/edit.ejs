<!-- Modal Structure -->
<div id="modal-users-edit" class="modal">
  <div class="modal-content">
    <h1>Edit User <%= user.username %></h1>
    <% if (typeof message != "undefined") { %>
      <div class="error-message">
        <%= message %>
      </div>
    <% } %>
    <div class='row'>
      <form action="/users/<%= user.id %>/edit" method="POST" class='col s12'>
        <div class='row'>
          <div class="input-field col s12">
            <label class='label-modal-edit' for="user" data-error="wrong" data-success="right">User</label>
            <input type="text" name="user" id="user-modal-edit" class="validate" value="<%= user.username %>" required>
          </div>
          <div class="input-field col s6">
            <label class='label-modal-edit' visibility='hidden' for="first-name" data-error="wrong" data-success="right">First Name</label>
            <input type="text" name="firstName" id="first-name-modal-edit" class="validate" value="<%= user.firstName %>" required>
          </div>
          <div class="input-field col s6">
            <label class='label-modal-edit' for="last-name" data-error="wrong" data-success="right">Last Name</label>
            <input type="text" name="lastName" id="last-name-modal-edit" class="validate" value="<%= user.lastName %>" required>
          </div>
          <div class="input-field col s6">
            <label class='label-modal-edit' for="email" data-error="wrong" data-success="right">Email</label>
            <input type="email" name="email" id="email-modal-edit" class="validate" value="<%= user.email %>" required>
          </div>
          <div class="input-field col s6">
            <input type="text" name="rol" id="rol" value="<%= user.rol %>" disabled>
          </div>
          <div class="modal-footer">
            <button class="waves-effect waves-light btn blue-grey" type='submit'>
              UPDATE
              <i class="material-icons right">send</i>
            </button>
            <a class="waves-effect waves-light red btn" href="/users">CANCEL</a>
          </div>
        </div>
      </form>
    </div>

<!-- wraper modal -->
  </div>
</div>
