<header>
  <a class="back-link" href="/dashboard">Back to dashboard</a>
  <h1>List of users</h1>
  <!-- Modal Trigger -->
  <a class="btn-floating right btn-large waves-effect waves-light red btn modal-trigger" href='#modal-users-new'><i class="material-icons">add</i></a>
</header>
<hr>
<table class="bordered responsive-table">
  <thead>
    <tr>
      <th>User Name</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Rol</th>
    </tr>
  </thead>
  <tbody>
		<% if( typeof users !== 'undefined') { %>
			<% users.forEach(user => { %>
	      <tr>
	        <td class='user-name' data-user-name="<%= user.username %>"><%= user.username %></td>
	        <td class= 'first-name' data-first-name="<%= user.firstName %>"><%= user.firstName %></td>
	        <td class= 'last-name' data-last-name="<%= user.lastName %>"><%= user.lastName %></td>
	        <td class= 'user-email' data-user-email="<%= user.email %>"><%= user.email %></td>
	        <td class= 'user-rol' data-user-rol="<%= user.rol %>"><%= user.rol %></td>

	        <!-- Modal Trigger -->
	        <td><a href="#modal-users-edit" class="waves-effect waves-light blue-grey btn modal-trigger edit-button-user" data-user-id="<%= user._id %>" >
            <i class="material-icons">edit</i>
          </a></td>
	        <td><a class="waves-effect waves-light btn red" href="/users/<%= user._id%>/delete">
            <i class="material-icons">delete</i>
          </a></td>
	      </tr>
	    <% }) %>
    <% } %>
  </tbody>
</table>
<!-- Modals Includes-->
<%- include("partials/new.ejs") %>
<%- include("partials/edit.ejs") %>
