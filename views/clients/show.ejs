<header>
  <a class="back-link" href="/dashboard">Back to dashboard</a>
  <h1>List of clients</h1>
  <a class="btn-floating right btn-large waves-effect waves-light red btn modal-trigger" href="/clients/new"><i class="material-icons">add</i></a>
</header>
<hr>
<table class="bordered responsive-table">
  <thead>
    <tr>
      <th>Client Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Vendor</th>
    </tr>
  </thead>
  <tbody>
    <% if(typeof clients !== 'undefined'){ %>
      <% clients.forEach( (client) =>{ %>
          <tr>
            <td><%= client.firstName %> <%= client.lastName %> </td>
            <td><%= client.email %></td>
            <td><%= client.address %></td>
            <td><%= client.employeeVendor[0].username %></td>

            <td><a class="waves-effect waves-light btn blue-grey" href="/clients/<%= client._id%>/edit">
              <i class="material-icons">edit</i>
            </a></td>
            <td><a class="waves-effect waves-light btn red" href="/clients/<%= client._id%>/delete">
              <i class="material-icons">delete</i>
            </a></td>
          </tr>
        <% }) %>
      <% } %>
  </tbody>
</table>
