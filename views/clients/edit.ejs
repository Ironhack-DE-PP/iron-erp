<h2>Edit client <%= client.firstName %> <%= client.lastName %></h2>
<% if (typeof message != undefined) { %>
  <div class="error-message">
    <%= message %>
  </div>
<% } %>
<div class='row'>
<form action="/clients/<%= client.id %>/edit" method="POST">
  <div class='row'>
    <div class="input-field col s6">
  <label for="fistName" data-error="wrong" data-success="right">First Name</label>
  <input type="text" name="firstName" id="firstName" class="validate" value="<%= client.firstName %>" required>
</div>
<div class="input-field col s6">
  <label for="lastName">Last name</label>
  <input type="text" name="lastName" id="lastName" class="validate" value="<%= client.lastName %>" required>
</div>
<div class="input-field col s6">
  <label for="email">Email</label>
  <input type="email" name="email" id="email" class="validate" value="<%= client.email %>" required>
</div>
<div class="input-field col s6">
  <label for="address">Address</label>
  <input type="text" name="address" id="address" class="validate" value="<%= client.address %>" required>
</div>
  <div class="input-field col s6">
  <label for="phoneNumber">Phone Number</label>
  <input type="tel" name="phoneNumber" id="phoneNumber" value="<%= client.phoneNumber%>" required>
</div>
<div class="input-field col s6">
  <label for="employeeVendor">Vendor</label>
  <input type="text" name="employeeVendor" id="employeeVendor" value="<%= client.employeeVendor[0].username%>" disabled>
  </div>
  <ul class="collection with-header">
    <h4 class="collection-header">Products List</h4>
    <% client.productsList.forEach(product => { %>
      <li class="collection-item" value="<%= product.id %>"><%= product.name %></li>
    <% })%>
  </ul>

  <button class="waves-effect waves-light btn blue-grey btn-margin" type='submit'>
    Update
    <i class="material-icons right">send</i>
  </button>
  <a class="waves-effect waves-light btn red" href="/clients" btn-margin>Cancel</a>
</form>
