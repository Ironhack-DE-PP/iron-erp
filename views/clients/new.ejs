<h1>New Client</h1>
<hr><br>
<form action="/clients/new" method="post">
  <label for="firstName">Name</label>
  <input type="text" name="firstName" id="firstName">
  <label for="lastName">Last name</label>
  <input type="text" name="lastName" id="lastName">
  <label for="email">Email</label>
  <input type="email" name="email" id="email">
  <label for="address">Address</label>
  <input type="text" name="address" id="address">
  <label for="phoneNumber">Phone Number</label>
  <input type="tel" name="phoneNumber" id="phoneNumber">
  <select class="product-client-list col s12" name="productsList" multiple="multiple" id="productsList">
    <% productsListSelect.forEach(product => {  %>
      <option value="<%= product.id %>"><%= product.name %></option>
    <% }) %>
  </select>
  <select name="employeeVendor" id="employeeVendor">
    <% users.forEach(user => { %>
      <option value="<%= user.id %>"><%= user.username %></option>
    <% })%>
  </select>
  <button class="waves-effect waves-light btn blue-grey">Create</button>
  <a class="waves-effect waves-light btn blue-grey" href="/clients">Back to client list</a>
</form>