<h2>Edit product <%= selectedProduct.name%></h2>
<% if (typeof message != undefined) { %>
  <div class="error-message">
    <%= message %>
  </div>
<% } %>
<form action="/products/<%= selectedProduct.id %>/edit" method="POST">
  <label for="name">Name</label>
  <input type="text" name="name" id="name" value="<%= selectedProduct.name %>">
  <label for="Price">Price</label>
  <input type="text" name="price" id="price" placeholder="$0.00" value="<%= selectedProduct.price %>">
  <label for="description">Description</label>
  <input type="text" name="description" id="description" value="<%= selectedProduct.description %>">
  <label for="supplier">Supplier</label>
  <input disabled type="text" name="supplier" id="supplier" value="<%= selectedProduct.supplier[0].name %>">
  <button class="waves-effect waves-light btn">Update</button>
  <a class="waves-effect waves-light btn red" href="/products">Cancel</a>
</form>