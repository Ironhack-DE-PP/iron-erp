<header>
<a class="back-link" href="/dashboard">Back to dashboard</a>
<h1>List of products</h1>
<a class="btn-floating right btn-large waves-effect waves-light red btn modal-trigger left" href="/products/new"><i class="material-icons">add</i></a>
</header>
<hr>
<table class="bordered responsive-table">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Supplier</th>
    </tr>
  </thead>
  <tbody>
    <% if(typeof products !== 'undefined'){ %>
      <% products.forEach(product => { %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %>â‚¬</td>
          <td><%= product.description %></td>
          <td><%= product.supplier[0].name %></td>
          <td><a class="waves-effect waves-light btn blue-grey" href="/products/<%= product._id%>/edit">
          <i class="material-icons">edit</i>
          </a></td>
          <td><a class="waves-effect waves-light btn red" href="/products/<%= product._id%>/delete"><i class="material-icons">delete</i></a></td>
        </tr>
        <% }) %>
    <% } %>
  </tbody>
</table>
